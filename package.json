{
    "name": "marketplace-backend",
    "version": "1.0.0",
    "description": "marketplace-backend",
    "repository": {
        "type": "git",
        "url": "https://github.com/candrasaputra/backend-candra-saputra"
    },
    "main": "index.js",
    "engines": {
        "node": ">=18.13.0",
        "npm": ">=8.19.3"
    },
    "dependencies": {
        "@types/passport": "^1.0.16",
        "@types/passport-jwt": "^4.0.1",
        "body-parser": "^1.20.2",
        "compression": "^1.7.4",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.1.13",
        "source-map-support": "^0.5.21",
        "typeorm": "^0.3.17"
    },
    "devDependencies": {
        "@types/compression": "^1.7.3",
        "@types/connect-datadog": "^0.0.8",
        "@types/errorhandler": "1.5.1",
        "@types/express": "^4.17.19",
        "@types/jest": "^29.5.5",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/module-alias": "^2.0.2",
        "@types/node": "^20.8.4",
        "@types/pg": "^8.10.5",
        "@types/ssh2-sftp-client": "^9.0.1",
        "@types/supertest": "^2.0.14",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "cross-env": "^7.0.3",
        "dockest": "^3.0.1",
        "dotenv": "^16.3.1",
        "eslint": "^8.51.0",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jest": "^27.4.2",
        "eslint-plugin-prettier": "^5.0.1",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-extended": "^4.0.2",
        "lint-staged": "^14.0.1",
        "prettier": "3.0.3",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsc-watch": "^6.0.4",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    },
    "scripts": {
        "start": "node ./dist/src/server.js",
        "start:dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/src/server.js\"",
        "start-example-worker": "ts-node -r dotenv/config src/workers/example-worker.ts",
        "start-example-cron": "ts-node -r dotenv/config src/crons/example-cron.ts",
        "lint": "eslint --ignore-path .eslintignore --ext .ts,.js .",
        "lint:fix": "eslint --ignore-path .eslintignore --ext .ts --fix .",
        "build": "rimraf dist && tsc",
        "migration:create": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js migration:create",
        "migration:run": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js -d src/libs/typeorm/ormconfig-cli.ts migration:run",
        "migration:generate": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --dataSource src/libs/typeorm/ormconfig-cli.ts migration:generate",
        "migration:revert": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js -d src/libs/typeorm/ormconfig-cli.ts migration:revert",
        "format": "prettier --config .prettierrc.js --write \"./**/*.{js,ts,json,yml,yaml}\"",
        "format:check": "prettier --config .prettierrc.js --check \"./**/*.{js,ts,json,yml,yaml}\"",
        "seed": "ts-node -r dotenv/config -r ./src/module-alias.ts src/scripts/seed.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json}": [
            "npm run format"
        ],
        "*.{ts,js}": [
            "eslint"
        ]
    },
    "author": "candra saputra",
    "license": "UNLICENSED",
    "private": true
}
